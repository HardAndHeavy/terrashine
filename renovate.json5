{
    "extends": [
        "config:best-practices",
    ],
    "packageRules": [
        {
            "matchPackagePrefixes": [
                "tokio",
            ],
            "groupName": "tokio-packages",
        },
        {
            "matchSourceUrlPrefixes": [
                "https://github.com/serde-rs/",
            ],
            "groupName": "serde",
            "automerge": true,
        },
        {
            "matchManagers": [
                "docker-compose",
                "github-actions",
            ],
            "groupName": "ci environment",
            "automerge": true,
        },
    ]
}